@model IEnumerable<Facturando_2.Models.Cliente>


@{
    ViewData["Title"] = "Index";
}

<h1>Tabla de Nuestros clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-warning">Crear nuevo cliente</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCliente"class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCliente"class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
