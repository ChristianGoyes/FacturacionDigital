}

<h1>Eliminar Facturador</h1>

<h3>Estas seguro que deseas eliminarlo?</h3>
<div>
    <h4>Facturador</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreFac)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreFac)
        </dd>
        <dt class = "col-sm-2">
